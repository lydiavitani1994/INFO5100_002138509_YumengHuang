<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.example.demo.HelloController"
          xmlns:fx="http://javafx.com/fxml" prefHeight="1000" prefWidth="1000" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="10" right="25" bottom="10" left="25"/></padding>

    <Label fx:id="alert" text="" style="-fx-text-fill: red;"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="12"/>

    <TextField fx:id="num1"
               GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3" GridPane.valignment="CENTER"/>

    <Label fx:id="op" text="+"
           GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.columnSpan="1" GridPane.valignment="CENTER"/>

    <TextField fx:id="num2"
               GridPane.columnIndex="4" GridPane.rowIndex="1" GridPane.columnSpan="3" GridPane.valignment="CENTER"/>

    <Label fx:id="equ" text="="
           GridPane.columnIndex="7" GridPane.rowIndex="1" GridPane.columnSpan="1" GridPane.valignment="CENTER"/>

    <TextField fx:id="result"
               GridPane.columnIndex="8" GridPane.rowIndex="1" GridPane.columnSpan="10" GridPane.valignment="CENTER"/>

    <Button fx:id="plus" text="+" onAction="#onPlusClick"
            GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="1" GridPane.valignment="CENTER"/>

    <Button fx:id="minus" text="-" onAction="#onMinusClick"
            GridPane.columnIndex="4" GridPane.rowIndex="2" GridPane.columnSpan="1" GridPane.valignment="CENTER"/>

    <Button fx:id="multiply" text="*" onAction="#onMultiplyClick"
            GridPane.columnIndex="7" GridPane.rowIndex="2" GridPane.columnSpan="1" GridPane.valignment="CENTER"/>

    <Button fx:id="divide" text="/" onAction="#onDivideClick"
            GridPane.columnIndex="14" GridPane.rowIndex="2" GridPane.columnSpan="1" GridPane.valignment="CENTER"/>

    <Button fx:id="calculate" text="calculate" onAction="#onCalculateClick"
            GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.columnSpan="3" GridPane.valignment="CENTER"/>

    <Button fx:id="clear" text="clear" onAction="#onClearClick"
            GridPane.columnIndex="7" GridPane.rowIndex="3" GridPane.columnSpan="3" GridPane.valignment="CENTER"/>



    </GridPane>
