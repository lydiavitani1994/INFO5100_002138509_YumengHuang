<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="1000.0" styleClass="body" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.finalproject.controller.Controller">
    <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="1000.0" spacing="20.0" styleClass="nav">
        <Button mnemonicParsing="false" prefWidth="100.0" text="Delete All" onAction="#deleteAllImagesAction"/>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addImageAction"
                prefWidth="100.0" styleClass="nav-open-button" text="Add Image">
        </Button>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#downloadAllAction" prefWidth="100.0"
                styleClass="nav-download-button" text="Download All">
        </Button>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
    <VBox layoutY="49.0" prefHeight="751.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="49.0"/>
    <AnchorPane layoutY="50.0" prefHeight="750.0" prefWidth="1000.0">
        <children>
            <VBox fx:id="uploadDialog" alignment="CENTER" spacing="20.0" styleClass="upload-dialog"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
                <Label contentDisplay="CENTER" styleClass="upload-text" text="Upload your image here">
                </Label>
                <Button mnemonicParsing="false" onAction="#addImageAction" prefWidth="100.0" styleClass="upload-button"
                        text="Add Image">
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                </Button>
            </VBox>
            <ScrollPane fx:id="imageViewScrollPane" hbarPolicy="NEVER" visible="false" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <content>
                    <VBox fx:id="imageViewContainer" prefHeight="750.0" prefWidth="1000.0"/>
                </content>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </ScrollPane>
        </children>
    </AnchorPane>
</AnchorPane>
